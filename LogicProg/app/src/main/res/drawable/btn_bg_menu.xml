<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <size android:width="100dp" android:height="40dp" />
            <gradient
                android:startColor="#992096d6"
                android:endColor="#992096d6"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#9932A1CC" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <size android:width="100dp" android:height="40dp" />
            <gradient
                android:startColor="#996ACEE8"
                android:endColor="#996ACEE8"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#9932A1CC" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>

    </item>
</selector>