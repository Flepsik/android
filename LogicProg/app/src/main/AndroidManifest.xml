<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fleps.logicprog" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activities.PlayGame"
            android:clearTaskOnLaunch="true"/>
        <activity android:name=".Activities.ChooseMode"/>
        <activity android:name=".Activities.ChooseLevel"
            android:launchMode="singleTask"
            android:clearTaskOnLaunch="true"/>
        <activity android:name=".Activities.WinnerActivity"
            android:launchMode="singleTask"
            android:clearTaskOnLaunch="true"/>
    </application>

</manifest>
